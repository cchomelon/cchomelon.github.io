---
layout: base.njk
title: Home
---

{% set latest = (collections.post | reverse | first) %}
{% set statusMarkdown = "**Status**: I am in your extended network." %}

<div class="profile-header">
  <div class="profile-name">
    <span class="font-serif">schizo</span><span class="font-mono">posting</span>
  </div>
  <div class="profile-status"><span class="font-mono">0x5F3759DF</span></div>
</div>

<div class="columns">
  <aside class="sidebar">
    <div class="panel">
      <div class="panel-title">About</div>
      <div class="panel-body">
        <div class="profile-card">
          <div class="profile-photo">
            <img src="{{ '/assets/images/profile.jpeg' | url }}" alt="Jack" class="profile-photo-img">
          </div>
          <div class="profile-meta">
            <div>Jack,</div>
            <div>melon,</div>
            <div>Bebubebu</div>
          </div>
        </div>
        <div class="profile-links">
          <a href="#">View Pics</a>
        </div>
        <div class="status-note">
          {{ statusMarkdown | markdownify | safe }}
        </div>
      </div>
    </div>

    <div class="panel">
      <div class="panel-title">Blog Index</div>
      <div class="panel-body">
        <ul class="post-list">
          {% for post in collections.post | reverse %}
            <li class="post-item">
              <div class="post-date">{{ post.date | utcDate }}</div>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </aside>

  <main class="content">
    <div class="panel">
      <div class="panel-title">Latest Blog Entry</div>
      <div class="panel-body">
        {% if latest %}
          <h1 class="latest-title">{{ latest.data.title }}</h1>
          <div class="latest-date">{{ latest.date | utcDate }}</div>
          <div class="latest-content">
            {{ latest.templateContent | safe }}
          </div>
        {% else %}
          <p>No posts yet.</p>
        {% endif %}
      </div>
    </div>

  </main>
</div>
